<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_setting"
        tools:context="com.java.wangyihan.SettingActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Switch
                android:text="@string/night_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/night_mode_switch"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>
        <Switch
                android:text="@string/data_saving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/save_net_switch"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
