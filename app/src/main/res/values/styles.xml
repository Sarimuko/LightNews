<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="LightAppTheme" parent="AppTheme">
        <item name="colorText">#333333</item>
        <item name="colorTextBackground">#FFFFFF</item>
    </style>
    <style name="LightAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="LightAppTheme.AppBarOverlay" parent="AppTheme.AppBarOverlay"/>
    <style name="LightAppTheme.PopupOverlay" parent="AppTheme.PopupOverlay"/>


    <style name="NightAppTheme" parent="AppTheme">
        <item name="colorText">#DDDD</item>
        <item name="colorTextBackground">#333333</item>

    </style>

    <style name="NightAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="NightAppTheme.AppBarOverlay" parent="AppTheme.AppBarOverlay"/>
    <style name="NightAppTheme.PopupOverlay" parent="AppTheme.PopupOverlay"/>


</resources>
